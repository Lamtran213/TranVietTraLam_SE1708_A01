@model IEnumerable<ASM_01_SE1708_SE182432_Services.DTO.Request.ViewNewsArticleHistory>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>News Article History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .status-badge {
            font-size: 0.85rem;
            padding: 4px 8px;
        }
    </style>
</head>
<body>
<div class="container">
    <h2 class="mb-4 text-center">News Article History</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No news articles found.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Headline</th>
                <th>Status</th>
                <th>Created Date</th>
                <th>Modified Date</th>
                <th>Source</th>
                <th>Category ID</th>
                <th>Tags</th>
                <th>Created By</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td>@article.NewsTitle</td>
                    <td>@article.Headline</td>
                    <td>
                        <span class="badge @(article.NewsStatus == true ? "bg-success" : "bg-secondary") status-badge">
                            @(article.NewsStatus == true ? "Published" : "Draft")
                        </span>
                    </td>
                    <td>@article.CreatedDate?.ToString("yyyy-MM-dd")</td>
                    <td>@article.ModifiedDate?.ToString("yyyy-MM-dd")</td>
                    <td>@article.NewsSource</td>
                    <td>@article.CategoryId</td>
                    <td>@string.Join(", ", article.Tags?.Select(tag => tag.TagName))</td>
                    <td>@article.CreatedBy?.AccountEmail</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
