@model ASM_01_SE1708_SE182432_Repositories.Models.SystemAccount

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container mt-5">
    <h2 class="mb-4">User Profile</h2>
    <a class="btn btn-outline-primary btn-sm mb-3 shadow-sm rounded d-inline-flex align-items-center" asp-area="" asp-controller="SystemAccount" asp-action="Staff">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle me-2" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path fill-rule="evenodd" d="M8.354 11.354a.5.5 0 0 0 0-.708L6.707 9H11.5a.5.5 0 0 0 0-1H6.707l1.647-1.646a.5.5 0 0 0-.708-.708l-2.5 2.5a.5.5 0 0 0 0 .708l2.5 2.5a.5.5 0 0 0 .708 0z"/>
        </svg>
        Return
    </a>
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Account Name</label>
                <input type="text" class="form-control" value="@Model.AccountName" readonly/>
            </div>
            <div class="mb-3">
                <label class="form-label">Account Email</label>
                <input type="email" class="form-control" value="@Model.AccountEmail" readonly/>
            </div>
            <div class="mb-3">
                <label class="form-label">Account Password</label>
                <input type="password" class="form-control" value="@Model.AccountPassword" readonly/>
            </div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateProfileModal">Update Profile</button>
        </div>
    </div>
</div>

<!-- Modal cập nhật -->
<div class="modal fade" id="updateProfileModal" tabindex="-1" aria-labelledby="updateProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateProfile" asp-controller="SystemAccount" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Update Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="AccountId" value="@Model.AccountId"/>
                    <div class="mb-3">
                        <label class="form-label">Account Name</label>
                        <input type="text" name="AccountName" value="@Model.AccountName" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Email</label>
                        <input type="email" name="AccountEmail" value="@Model.AccountEmail" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Password</label>
                        <input type="password" name="AccountPassword" value="@Model.AccountPassword" class="form-control" required/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
