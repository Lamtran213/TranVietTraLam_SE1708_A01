@model TranVietTraLam_Repositories.Models.SystemAccount

<style>
.sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 220px;
    background: #23272b;
    color: #fff;
    display: flex;
    flex-direction: column;
    z-index: 1000;
    overflow-y: auto;
    box-shadow: 2px 0 10px rgba(0,0,0,0.08);
}
.sidebar .sidebar-title {
    font-size: 1.3rem;
    font-weight: 700;
    padding: 1.5rem 1rem 1rem 1.5rem;
    color: #fff;
    letter-spacing: 1px;
}
.sidebar .nav {
    flex-direction: column;
    gap: 0.5rem;
    padding-left: 0;
    margin-bottom: 0;
}
.sidebar .nav-link {
    color: #fff;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    transition: background 0.2s;
    position: relative;
    white-space: nowrap;
}
.sidebar .nav-link:hover, .sidebar .nav-link:focus {
    background: #495057;
}
.sidebar-footer {
    margin-top: auto;
    padding: 1rem 1.5rem;
    font-size: 1rem;
    color: #adb5bd;
    border-top: 1px solid #343a40;
}
body { margin-left: 220px; }
</style>
<div class="sidebar">
    <div class="sidebar-title">FPT University CMS</div>
    <nav class="nav flex-column">
        <a class="nav-link active" href="@Url.Action("Staff", "SystemAccount")">Home</a>
        <a class="nav-link" asp-controller="Category" asp-action="GetCategories">Categories</a>
        <a class="nav-link" asp-controller="NewsArticle" asp-action="NewsArticleForStaff">News Articles</a>
        <a class="nav-link" asp-controller="NewsArticle" asp-action="ViewNewsArticleByStaffId" asp-route-id="@Model.AccountId">View History</a>
        <a class="nav-link" asp-controller="SystemAccount" asp-action="Profile">Profile</a>
    </nav>
    <div class="sidebar-footer">
        Welcome, @Model.AccountName
        <form method="get" asp-controller="SystemAccount" asp-action="Logout" class="mt-2">
            <button type="submit" class="btn btn-outline-light btn-sm w-100">Logout</button>
        </form>
    </div>
</div>
